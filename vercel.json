{
  "version": 2,
  "routes": [
    // ============= 1. 强制添加尾部斜杠（关键！） =============
    {
      "src": "/love$",
      "headers": { "Location": "/love/" },
      "status": 308
    },
    {
      "src": "/color$",
      "headers": { "Location": "/color/" },
      "status": 308
    },
    {
      "src": "/quiz$",
      "headers": { "Location": "/quiz/" },
      "status": 308
    },
    {
      "src": "/personality$",
      "headers": { "Location": "/personality/" },
      "status": 308
    },

    // ============= 2. 文件系统处理 =============
    {
      "handle": "filesystem"
    },

    // ============= 3. 路由回退（确保 /love/xxx 能加载静态资源） =============
    {
      "src": "/love/(.*)",
      "dest": "/love/$1"
    },
    {
      "src": "/color/(.*)",
      "dest": "/color/$1"
    },
    {
      "src": "/quiz/(.*)",
      "dest": "/quiz/$1"
    },
    {
      "src": "/personality/(.*)",
      "dest": "/personality/$1"
    },

    // ============= 4. 根路径主页 =============
    {
      "src": "/",
      "dest": "/index.html"
    },

    // ============= 5. 自定义 404 =============
    {
      "src": "/(.*)",
      "status": 404,
      "dest": "/404.html"
    }
  ]
}
